import sys
import os

class MainRun(object):
    def __init__(self):
        self.main_menu = True
        self.change_name = False
        self.quit = False

        self.Main()

    #
    def ask_user(self,prompt):
        test = input(prompt)
        print(test)
        import os
        #os.system('cls')  # on windows
        os.system('clear')  # on linux / os x


    #    if test.lower() == "q":
    #        self.quit = False

    def Main(self):
        welcome_message = "Welcome to Tic-Tac-Toe. Menus are navigated by entering the key inside the [ ] on each alternative"
        print (welcome_message)
        while not self.quit:
            if self.main_menu:
                self.ask_user("[Q]uit")
                pass
            self.quit = True
            pass

if  __name__ =='__main__':
    MainRun()
